<!DOCTYPE html>
<html>
  <head>
    <script>
      // JavaScript to extract the code parameter from the URL and redirect with it
      const urlParams = new URLSearchParams(window.location.search);
      const oauthCode = urlParams.get('code');
      if (oauthCode) {
        // Redirect to the backend with the OAuth code
        window.location.href = 'https://captaindpm-github-io.vercel.app/.well-known/stripe-oauth-redirect?code=' + oauthCode;
      } else {
        // Handle the error case where no code is present
        alert('OAuth code not found.');
      }
    </script>
  </head>
  <body>
    Redirecting...
  </body>
</html>
